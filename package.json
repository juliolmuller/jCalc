{
  "name": "jcalc",
  "author": "Julio L. Muller",
  "version": "1.1.6",
  "description": "Provides development tools to minify and uglify codes and transpile JavaScript to mantain compatibility with old browsers.",
  "license": "MIT",
  "keywords": [
    "calculator",
    "calculadora"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/juliolmuller/jcalc"
  },
  "scripts": {
    "serve": "parcel src/index.html -d docs/",
    "start": "parcel serve src/index.html -d docs/",
    "watch": "parcel watch src/index.html -d docs/",
    "build": "parcel build src/index.html -d docs/ --public-url ./"
  },
  "devDependencies": {
    "@lacussoft/eslint-config-standard": "^1.0.3",
    "eslint": "^7.3.1",
    "parcel-bundler": "^1.12.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "@lacussoft/standard"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "rules": {
      "no-eval": "warn",
      "no-param-reassign": "off",
      "no-underscore-dangle": "off",
      "padded-blocks": "off",
      "space-before-function-paren": "off"
    }
  }
}
